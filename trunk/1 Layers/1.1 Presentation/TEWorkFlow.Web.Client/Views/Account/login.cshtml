@using System.Web.Optimization
@using TEWorkFlow.Web.Client.Models
@model TEWorkFlow.Web.Client.Models.LoginModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>系统登录</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="~/Styles/demo.css" />
    <script src="~/scripts/boot.js" type="text/javascript"></script>
    <link type="text/css" rel="Stylesheet" href="@Url.Content("~/Styles/reset.css")" />
    <link type="text/css" rel="Stylesheet" href="@Url.Content("~/Styles/controls.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/basic.js")"></script>
    <style type="text/css">
        #bg
        {
            margin: 50px;
            margin-left: auto;
            margin-right: auto;
            background-image: url(/Images/loginBg.jpg);
            background-repeat:no-repeat;
            width: 624px;
            height: 468px;
            padding-top: 200px;
            overflow:hidden;
        }
        #loginPn
        {
            width: 395px;
            height: 219px;
            margin: 0px auto;
            position: relative;
            background-image:url(/Images/loginPanel.png);
            background-repeat: no-repeat;
        }
        #loginPn img
        {
            position: absolute;
            left: 0;
            top: 0;
            z-index: 2;
            display:none;
        }
        #form
        {
            position: relative;
        }
        input
        {
            position: absolute;
            border: 0px solid transparent;
            background-color: transparent;
            width: 120px;
            z-index: 100;
            height:17px;
        }
        .hide
        {
            position: absolute;
            border: 0px solid transparent !important;
            background-color: transparent !important;
            width: 120px;
            z-index: 100;
            height:17px;
        }
        #validation
        {
            color:Red;
            position: absolute;
            top: 200px;
        }
    </style>
</head>
<body>
    <div id="bg" style="">
        <div id="loginPn">
            <img src="/Images/loginPanel.png" />
            <form method="post" action="/Account/Login">
            <input type="hidden" id="logintype" name="logintype" value="1" />
            <input class="hide" name="UserName" type="text" style="left: 133px; top: 92px; " />
            <input class="hide" name="Password" type="password" style="left: 133px; top: 127px;" />
            <input class="hide" type="submit" value="" style="left: 87px; top: 172px; width: 62px;" />
            <input class="hide" type="reset" value="" style="left: 227px; top: 172px; width: 62px;" />
            </form>
            <div id="validation">@Html.ValidationSummary(true, "")</div>
        </div>
    </div>
</body>
</html>
